<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/charity.css">

</head>
<body>
    <%- include('./includes/navigation.ejs') %>
    
    <main>
        <div class="charity">
            <div class="container">
                <div class="card-body">
                    <h3>Các hoàn cảnh Quyên góp</h3>
                </div>
                <div class="card-deck">
                    <% for (let item of charity) { %>
                    <div class="card" style="width: 18rem;">
                        <a href="#">
                            <img 
                            src="<%= item.imageUrl %>" 
                            class="card-img-top" 
                            alt="..."
                        >
                        </a>
                        <div class="card-body">
                            <a href="#">
                                <h5 class="card-title"> 
                                    <%= item.title %>
                                </h5>
                            </a>
                            <p class="card-text">
                                <%= item.organization %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-primary">Quyên góp</a>
                        </div>
                        <form action="/admin/delete-charity" method="POST">
                            <input type="hidden" name="charityId" value="<%= item._id %>">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
                <%- include('./includes/pagination.ejs', {currentPage: currentPage, previousPage: previousPage,
                    hasPreviousPage: hasPreviousPage, hasNextPage: hasNextPage, nextPage: nextPage, lastPage:
                    lastPage} )%>
            </div>
        </div>
        
<%- include('./includes/end.ejs') %>
