<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/charity.css">

</head>
<body>
    <%- include('./includes/navigation.ejs') %>
    
    <main>
        <div class="charity">
            <div class="container">
                <div class="card-body">
                    <h3>Các hoàn cảnh Quyên góp</h3>
                </div>
                <div class="card-group">
                    <% for (let item of charity) { %>
                    <div class="card" style="width: 18rem;">
                        <img 
                            src="https://static.mservice.io/blogscontents/momo-upload-api-220804120412-637952114524645368.jpg" 
                            class="card-img-top" 
                            alt="..."
                        >
                        <div class="card-body">
                            <h5 class="card-title"> 
                                <%= item.title %>
                            </h5>
                            <p class="card-text">
                                <%= item.organization %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-primary">Quyên góp</a>
                        </div>
                    </div>
                    <% } %>
                </div>
                <%- include('./includes/pagination.ejs', {currentPage: currentPage, previousPage: previousPage,
                    hasPreviousPage: hasPreviousPage, hasNextPage: hasNextPage, nextPage: nextPage, lastPage:
                    lastPage} )%>
            </div>
        </div>
        
<%- include('./includes/end.ejs') %>
